import random
continuar = True

while continuar:
    #Lista de palavras (vocÃª pode trocar por times, paÃ­ses, etc.)
    palavras = ['brasil', 'argentina', 'uruguai', 'paraguai', 'chile', 'colombia', 'peru',
    'venezuela', 'equador', 'bolivia', 'mexico', 'canada', 'estadosunidos',
    'alemanha', 'franca', 'italia', 'espanha', 'portugal', 'inglaterra',
    'japao', 'china', 'coreiasul', 'australia', 'india', 'russia', 'egito']

# Sorteia a palavra secreta
    palavra_secreta = random.choice(palavras)

# Inicializa variÃ¡veis
    vidas = 4
    letras_usadas = []
    letras_corretas = ['_' for _ in palavra_secreta]

    print("ğŸ¯ Bem-vindo ao Jogo da Forca!")
    print("Dica: Times Brasileiros.")

# Loop do jogo
    while vidas > 0 and '_' in letras_corretas:
        print("\nPalavra: ", ' '.join(letras_corretas))
        print(f"â¤ï¸ Vidas restantes: {vidas}")
        print("Letras jÃ¡ usadas:", ' '.join(letras_usadas))

        letra = input("Digite uma letra: ").lower()

    # Verifica se jÃ¡ foi usada
        if letra in letras_usadas:
            print("VocÃª jÃ¡ tentou essa letra. Tente outra.")
            continue

        letras_usadas.append(letra)

        if letra in palavra_secreta:
            print("âœ… Letra correta!")
            for i in range(len(palavra_secreta)):
                if palavra_secreta[i] == letra:
                    letras_corretas[i] = letra
        else:
            print("âŒ Letra incorreta.")
            vidas -= 1

# Resultado final
    if '_' not in letras_corretas:
        print("\nğŸ‰ ParabÃ©ns! VocÃª acertou a palavra:", palavra_secreta)
    else:
        print("\nğŸ’€ Fim de jogo! A palavra era:", palavra_secreta)

    opcao = input('Deseja continuar (s/n): ')
    if opcao != 's':
        continuar = False
        print('-----------------------------------------------------------------------------------------------------------------')
